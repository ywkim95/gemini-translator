{
  "manifest_version": 3,
  "name": "Sidekick Translator",
  "version": "1.0",
  "description": "현재 페이지를 Gemini로 요약 및 번역합니다.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage" 
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "페이지 요약/번역 실행"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "/scripts/readability.js", "/scripts/showdown.js", "/ui/sidebar.css" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "options_page": "options.html"
}